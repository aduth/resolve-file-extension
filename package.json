{
	"name": "resolve-file-extension",
	"version": "1.0.0",
	"description": "Resolve a file path from a base filename",
	"type": "module",
	"main": "./resolve.js",
	"exports": {
		".": "./resolve.js"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "rm -f resolve.d.ts",
		"pretest": "npm run clean",
		"test": "run-p test:*",
		"test:lint": "eslint .",
		"test:types": "tsc",
		"test:unit": "mocha",
		"prebuild": "npm run clean",
		"build": "run-p build:*",
		"build:types": "tsc -p tsconfig.decl.json",
		"prepublishOnly": "npm run build"
	},
	"author": {
		"name": "Andrew Duthie",
		"email": "andrew@andrewduthie.com",
		"url": "https://andrewduthie.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/aduth/resolve-file-extension.git"
	},
	"license": "MIT",
	"files": [
		"resolve.js",
		"resolve.d.ts"
	],
	"devDependencies": {
		"@aduth/eslint-config": "^4.2.1",
		"@types/chai": "^4.2.22",
		"@types/mocha": "^9.0.0",
		"@types/node": "^16.10.2",
		"chai": "^4.3.4",
		"eslint": "^7.32.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"mocha": "^9.1.2",
		"npm-run-all": "^4.1.5",
		"typescript": "^4.4.3"
	}
